= form_for @rate do |f|
  - if @rate.errors.any?
    %section#alerts
      .row
        .span16.columns
          .alert-message.error
            %a.close
              x
            %p
              %strong
                = pluralize(@rate.errors.count, "error")
                prohibited this rate from being saved:
              - @rate.errors.full_messages.each do |msg|
                %p
                  = msg
            
  .field.clearfix
    = f.label :bank_id
    .input
      = f.text_field :bank_id

  .field.clearfix
    = f.label :category_rate_type_id
    .input
      = f.text_field :category_rate_type_id

  .field.clearfix
    = f.label :percent_rate
    .input
      = f.text_field :percent_rate

  .actions
    = f.submit :class => 'btn primary'