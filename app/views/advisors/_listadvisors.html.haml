.page-header
	%h1 Advisors

.row
	.span16
		%ul#advisors_list
			- @advisors = Advisor.all
			- @advisors.each do |advisor|
				%li
					%span.advisor_name
						= link_to advisor.lastname + " " + advisor.firstname, advisor
					%span.bank_name
						= Bank.find(advisor.bank).name
					%span.advisor_rate
						- (advisor.average_rating_round).times do
							= image_tag "star.png"
					%span.view_comment
						- comments = advisor.comments.recent.limit(10).all
						= "View comments ( #{comments.count} )"
					%ul.advisor_comments
						- comments.each do |comment|
							%li
								= comment.comment
		%br
		= link_to 'New Advisor', new_advisor_path, :class => "btn primary"