= form_for @advisor do |f|
  - if @advisor.errors.any?
    %section#alerts
      .row
        .span16.columns
          .alert-message.error
            %a.close
              x
            %p
              %strong
                = pluralize(@advisor.errors.count, "error")
                prohibited this advisor from being saved:
              - @advisor.errors.full_messages.each do |msg|
                %p
                  = msg
          

  .field.clearfix
    = f.label :advisor_type_id
    .input
      = collection_select :advisor, :advisor_type_id, AdvisorType.find(:all), :id, :name

  .field.clearfix
    = f.label :bank_id
    .input
      = collection_select :advisor, :bank_id, Bank.find(:all), :id, :name

  .field.clearfix
    = f.label :lastname
    .input
      = f.text_field :lastname
  
  .field.clearfix
    = f.label :firstname
    .input
      = f.text_field :firstname


  .actions
    = f.submit :class => 'btn primary'