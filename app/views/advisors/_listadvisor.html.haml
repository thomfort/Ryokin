.page-header
  %h1 Advisors
  
.row
  .span16
    %table.zebra-striped
      %thead
        %tr
          %th
            Bank
          %th
            Advisor type
          %th
            Last name
          %th
            First name
          %th
            Rates
          %th
            Comments
          %th
          %th
          %th
      %tbody
        // Quel technique utiliser?
        - @advisors = Advisor.all
        - @advisors.each do |advisor| 
          %tr
            %td
              = Bank.find(advisor.bank).name
            %td
              = AdvisorType.find(advisor.advisor_type).name
            %td
              = advisor.lastname
            %td
              = advisor.firstname
            %td
              = link_to "1", :controller => 'advisors', :action => 'rating_advisor', :id => advisor, :rate => '1'
              = link_to "2", :controller => 'advisors', :action => 'rating_advisor', :id => advisor, :rate => '2'
              = link_to "3", :controller => 'advisors', :action => 'rating_advisor', :id => advisor, :rate => '3'
              = link_to "4", :controller => 'advisors', :action => 'rating_advisor', :id => advisor, :rate => '4'
              = link_to "5", :controller => 'advisors', :action => 'rating_advisor', :id => advisor, :rate => '5'
       
            %td
              = form_tag '/advisors/add_comment' do
                = text_area :advisor, :comment, :rows => 4
                = hidden_field 'commentable', 'commentable_id', :value => advisor.id
                = submit_tag 'Add'
            %td
              = link_to 'Show', advisor
            %td
              = link_to 'Edit', edit_advisor_path(advisor)
            %td
              = link_to 'Destroy', advisor, :confirm => 'Are you sure?', :method => :delete
      
    %br
  
    = link_to 'New Advisor', new_advisor_path, :class => "btn primary"