%h1 Sign Up

= form_for @user do |f|
  - if @user.errors.any?
    .error_messages
      %h2 Form is invalid
      %ul
        - for message in $user.errors.full_messages
          %li
            = message
  .field.clearfix
    = f.label :email
    = f.text_field :email 
  
  .field.clearfix
    = f.label :password
    = f.password_field :password

  .field.clearfix 
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  .actions
    = f.submit
