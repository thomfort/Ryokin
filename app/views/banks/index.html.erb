<h1>Listing banks</h1>

<table class="common-table zebra-striped">
  <tr>
    <th>Name</th>
    <th>Abbr</th>
    <th>Logo url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @banks.each do |bank| %>
  <tr>
    <td><%= bank.name %></td>
    <td><%= bank.abbr %></td>
    <td><%= bank.logo_url %></td>
    <td><%= link_to 'Show', bank %></td>
    <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
    <td><%= link_to 'Destroy', bank, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

